<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesquisaActivity">

    <EditText
        android:id="@+id/edtPesquisa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="CÃ³digo do Pokemon "
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPesquisar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pesquisar"
        app:layout_constraintEnd_toEndOf="@+id/edtPesquisa"
        app:layout_constraintStart_toStartOf="@+id/edtPesquisa"
        app:layout_constraintTop_toBottomOf="@+id/edtPesquisa" />

    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/btnPesquisar"
        app:layout_constraintStart_toStartOf="@+id/btnPesquisar"
        app:layout_constraintTop_toBottomOf="@+id/btnPesquisar"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:text="Androidchu"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivPokemon"
        app:layout_constraintStart_toStartOf="@+id/ivPokemon"
        app:layout_constraintTop_toBottomOf="@+id/ivPokemon" />
</android.support.constraint.ConstraintLayout>